#!/usr/bin/env bash
set -eu

zola check
zola build --output-dir ./docs
# TODO Remove this
echo "<html><body>spitlo.com</body></html>" > ./docs/index.html
rm ./docs/atom.xml
sed -i '' 's_https://spitlo.com__g' docs/search_index.en.js
git add ./docs
git commit -m "Deploy site $(date '+%Y-%m-%d %H:%M')"
git push
